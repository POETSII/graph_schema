<?xml version="1.0"?>
<Graph xmlns="TODO/POETS/virtual-graph-schema-v0" id="two-device-box">
  
  <EdgeTypes>
    <EdgeType id="et1">
      <Message>
	<Int32 name="value" />
      </Message>      
    </EdgeType>
    
    <EdgeType id="et2">
      <Message>
	<Float32 name="bobble" />
      </Message>      
    </EdgeType>
  </EdgeTypes>
  
  <DeviceTypes>
    <DeviceType id="dtA">
      <InputPort name="in" edgeTypeId="et1">
	<OnReceive />
      </InputPort>

      <OutputPort name="out" edgeTypeId="et2">
	<OnSend></OnSend>
      </OutputPort>
    </DeviceType>

    <DeviceType id="dtB">
      <InputPort name="in" edgeTypeId="et2">
	<OnReceive />
      </InputPort>

      <OutputPort name="out" edgeTypeId="et1">
	<OnSend></OnSend>
      </OutputPort>
    </DeviceType>
  </DeviceTypes>

  <DeviceInstances>
    <DeviceInstance id="dA0" deviceTypeId="dtA" />
    <DeviceInstance id="dA1" deviceTypeId="dtA" />
    <DeviceInstance id="dB0" deviceTypeId="dtB" />
    <DeviceInstance id="dB1" deviceTypeId="dtB" />
  </DeviceInstances>

  <EdgeInstances>
    <EdgeInstance dstDeviceId="dA0" dstPortName="in" srcDeviceId="dB0" srcPortName="out" />
    <EdgeInstance dstDeviceId="dB1" dstPortName="in" srcDeviceId="dA0" srcPortName="out" />
    <EdgeInstance dstDeviceId="dB1" dstPortName="in" srcDeviceId="dA1" srcPortName="out" />
    <EdgeInstance dstDeviceId="dA0" dstPortName="in" srcDeviceId="dB1" srcPortName="out" />
    <EdgeInstance dstDeviceId="dB0" dstPortName="in" srcDeviceId="dA1" srcPortName="out" />
  </EdgeInstances>
</Graph>
