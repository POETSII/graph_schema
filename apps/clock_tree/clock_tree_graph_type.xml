<?xml version="1.0"?>
<Graph xmlns="http://TODO.org/POETS/virtual-graph-schema-v1">
  <GraphType id="clock_tree">
	<Doc>
		This implements a simple clock-tree benchmark. The graph consists of
		a root node, branch nodes, and leaf nodes. The root node initiates
		clock pulses, the branch nodes fan them out, and the leaf nodes
		reflect them back again.
	</Doc>
	 
	 <MetaData>
		"native_dimension":2
	 </MetaData>


    <MessageTypes>
      <MessageType id="__init__">
		<Doc>This doesn't have any properties</Doc>
      </MessageType>
      
      <MessageType id="tick">
		<Doc>A tick being sent from the root through to the leaves</Doc>
      </MessageType>

      <MessageType id="ack">
		<Doc>An acknowledgement being sent from the leaves back through to the root</Doc>
      </MessageType>
    </MessageTypes>
    
    <DeviceTypes>
      <DeviceType id="root">
		<Properties>
		  <Scalar type="uint32_t" name="fanout"/>
		</Properties>
		
		<State>
		  <Scalar type="uint32_t" name="cycle" value="0" />
		  <Scalar type="uint32_t" name="pending" value="0" />
		</State>
		
		<RequestSend><![CDATA[
			*requestSendFlags = deviceState->pending==0 ? root_tick_out_index : 0;
		]]></RequestSend>
		
		<OutputPort name="tick_out" edgeTypeId="tick">
		  <OnSend><![CDATA[
		  deviceState->cycle++;
		  deviceState->pending=deviceProperties->fanout;
		  ]]></OnSend>
		</OutputPort>
		
		<InputPort name="ack_in" edgeTypeId="ack">
		  <OnReceive><![CDATA[
		  deviceState->pending--;
		  ]]></OnReceive>
		</InputPort>

      </DeviceType>
	
	<DeviceType id="branch">
	  <Properties>
	    <Scalar type="uint32_t" name="fanout"/>
	  </Properties>
	  
	  <State>
		<!--
			0 : Idle
			1 : Tick received, but not forwarded
			2 : All acks received
			2+n : Waiting for n acks to be received
		-->
		<Scalar type="int32_t" name="status" />
	  </State>
	  
	  <RequestSend><![CDATA[
			if(deviceState->status==0){
				*requestSendFlags=0;
			}else if(deviceState->status==1){
				*requestSendFlags = branch_tick_out_index;
			}else if(deviceState->status==2){
				*requestSendFlags = branch_ack_out_index;
			}else{
				*requestSendFlags=0;
			}
		]]></RequestSend>
	  
	  <InputPort name="tick_in" edgeTypeId="tick">
	    <OnReceive><![CDATA[
	    deviceState->status=1;
	    ]]></OnReceive>
	  </InputPort>
	  
	  <OutputPort name="tick_out" edgeTypeId="tick">
	    <OnSend><![CDATA[
	    deviceState->status=2+deviceProperties->fanout;
	    ]]></OnSend>
	  </OutputPort>
	  
	  <InputPort name="ack_in" edgeTypeId="ack">
	    <OnReceive><![CDATA[
	    deviceState->status--;
	    ]]></OnReceive>
	  </InputPort>
	  
	  <OutputPort name="ack_out" edgeTypeId="ack">
	    <OnSend><![CDATA[
	    deviceState->status=0;
	    ]]></OnSend>
	  </OutputPort>
	</DeviceType>
	
	<DeviceType id="leaf">
		<State>
			<Scalar type="bool" name="ready" />
		</State>
		
		<RequestSend><![CDATA[
		*requestSendFlags = deviceState->ready ? leaf_ack_out_index : 0;
		]]></RequestSend>
	
		  <InputPort name="tick_in" edgeTypeId="tick">
			<OnReceive><![CDATA[
			deviceState->ready=true;
			]]>
			</OnReceive>
		  </InputPort>
		  
		  <OutputPort name="ack_out" edgeTypeId="ack">
			<OnSend><![CDATA[
			deviceState->ready=false;
			]]></OnSend>
		  </OutputPort>
		</DeviceType>
	  </DeviceTypes>
	</GraphType>
</Graph>

